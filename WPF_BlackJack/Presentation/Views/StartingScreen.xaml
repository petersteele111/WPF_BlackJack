<Window x:Class="WPF_BlackJack.Presentation.StartingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BlackJack.Presentation"
        mc:Ignorable="d"
        Title="StartingScreen" Height="560" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Image Source="../Images/OpeningScreen/BlackJackOpeningScreenBackground.png" />
        <Grid>
            <Canvas>
                <Button Canvas.Top="400" Canvas.Left="300" Click="Button_Click" Style="{StaticResource ChangePlayButton}">
                </Button>
            </Canvas>
        </Grid>
    </Grid>
</Window>
