<Window x:Class="WPF_BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BlackJack"
        mc:Ignorable="d"
        Title="BlackJack" Height="800" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Background="DarkSlateGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="Images/GameBoard/BlackJackTable.png" Stretch="Fill" Grid.Column="0" Grid.Row="0" Height="577" VerticalAlignment="Top"/>
            <Canvas Grid.Column="0" Grid.Row="0">
                <Image Source="Images/Cards/c01.bmp" Canvas.Left="340" Canvas.Top="19" Width="85"></Image>
                <Image Source="Images/Cards/c01.bmp" Canvas.Left="360" Canvas.Top="19" Width="85"></Image>
                <Image Source="Images/Cards/c01.bmp" Canvas.Left="380" Canvas.Top="19" Width="85"></Image>
            </Canvas>
            <Canvas Grid.Column="0" Grid.Row="0">
                <Image Source="Images/Cards/c01.bmp" Canvas.Left="340" Canvas.Top="311" Width="85"></Image>
                <Image Source="Images/Cards/c01.bmp" Canvas.Left="360" Canvas.Top="311" Width="85"></Image>
                <Image Source="Images/Cards/c01.bmp" Canvas.Left="380" Canvas.Top="311" Width="85"></Image>
            </Canvas>
            <Canvas>
                <Image Source="Images/Chips/1Chip.png" Grid.Column="0" Grid.Row="1" Width="75   " Canvas.Left="15" Canvas.Top="600"></Image>
                <Image Source="Images/Chips/5Chip.png" Grid.Column="0" Grid.Row="1" Width="75   " Canvas.Left="100" Canvas.Top="600"></Image>
                <Image Source="Images/Chips/10Chip.png" Grid.Column="0" Grid.Row="1" Width="75   " Canvas.Left="185" Canvas.Top="600"></Image>
                <Image Source="Images/Chips/25Chip.png" Grid.Column="0" Grid.Row="1" Width="75   " Canvas.Left="15" Canvas.Top="685"></Image>
                <Image Source="Images/Chips/50Chip.png" Grid.Column="0" Grid.Row="1" Width="75   " Canvas.Left="100" Canvas.Top="685"></Image>
                <Image Source="Images/Chips/100Chip.png" Grid.Column="0" Grid.Row="1" Width="75   " Canvas.Left="185" Canvas.Top="685"></Image>
                <Label Content="Bets" Canvas.Left="100" Canvas.Top="530" Foreground="White" FontSize="36"></Label>
            </Canvas>
            <Canvas>
                <Label Content="Actions" Foreground="White" FontSize="36" Canvas.Left="350" Canvas.Top="530"></Label>
                <StackPanel Canvas.Left="325" Canvas.Top="585" Orientation="Vertical">
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Hit" FontSize="24" Width="80" Height="80" Margin="5"></Button>
                        <Button Content="Stand" FontSize="24" Width="80" Height="80"></Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Split" FontSize="24" Width="80" Height="80" Margin="5"></Button>
                        <Button Content="Deal" FontSize="24" Width="80" Height="80"></Button>
                    </StackPanel>
                    
                </StackPanel>
            </Canvas>
        </Grid>
    </Grid>
</Window>
